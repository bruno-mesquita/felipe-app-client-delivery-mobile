{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@components": ["./src/components"],
      "@form": ["./src/components/FormUtils"],
      "@utils/*": ["./src/utils/*"],
      "@services/*": ["./src/services/*"],
      "@screens/*": ["./src/screens/*"],
      "@store/*": ["./src/store/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@hooks": ["./src/hooks"]
    },
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "noImplicitAny": false
  },
  "extends": "expo/tsconfig.base"
}
